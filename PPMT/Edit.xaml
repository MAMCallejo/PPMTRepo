<Window x:Class="PPMT.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPMT"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1" Grid.Row="0" Name="n"></TextBox>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="ParentPanel" Grid.Column="1" Grid.Row="1">
                <Label Name ="Resource" Content="Resources" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15,0,15,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val1" />
                <Label Name ="one" Content="{Binding ElementName=val1, Path=Value, UpdateSourceTrigger=PropertyChanged}" FontFamily="Gotham Book" Foreground="Black" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                Project Delivers Financial Value* <LineBreak/> 
                *Financial value is validated as increased revenue, cost avoidance or productivity enhancement
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="SonPanel" Grid.Column="1" Grid.Row="2">
                <Label Name ="transformativeG" Content="Transformative Growth" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val2" />
                <Label Name ="two" Content="{Binding ElementName=val2, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
            </StackPanel>

            <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                 Project is aligned to the strategic priorities of the Transormative Growth Plan*, and the 2020 Operating Priorities <LineBreak/>
                 *Expanded customer access, Improved customer value, Increased investments in growth and technology
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="DaughterPanel" Grid.Column="1" Grid.Row="3">
                <Label Name ="HRPriority" Content="HR Priority" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val3" />
                <Label Name = "three" Content="{Binding ElementName=val3, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
            </StackPanel>

            <TextBlock Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                    Project is aligned to HR Priorities* <LineBreak/> 
                    *Lead people plans for Transformative Growth, Expand collective impact of Employability and Good Jobs, Orchestrate talent strategies across our global footprint, Contemporize employee total value offerings
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="OtherPanel" Grid.Column="1" Grid.Row="4">
                <Label Name ="Risk" Content="Risk" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val4" />
                <Label Name = "four" Content="{Binding ElementName=val4, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
            </StackPanel>

            <TextBlock Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
            Project heightens Riks* to the enterprise <LineBreak/>
            *Brand reputation, privacy, ethics &amp; market perception
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="ParentPanel2" Grid.Column="1" Grid.Row="5">
                <Label Name ="Resource2" Content="Resources" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15,0,15,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val5" />
                <Label Name ="five" Content="{Binding ElementName=val5, Path=Value, UpdateSourceTrigger=PropertyChanged}" FontFamily="Gotham Book" Foreground="Black" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                There are sufficient resources* at the required level available to deliver the projecct <LineBreak/> 
                *Resources (employees) in the People Analytics function
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="SonPanel2" Grid.Column="1" Grid.Row="6">
                <Label Name ="Data" Content="Data" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val6" />
                <Label Name ="six" Content="{Binding ElementName=val6, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                   Data is available with the required level of quality to deliver the project
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="DaughterPanel2" Grid.Column="1" Grid.Row="7">
                <Label Name ="Vendors" Content="Vendors" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val7" />
                <Label Name = "seven" Content="{Binding ElementName=val7, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                    External vendors* and/or In-house technology are needed to deliver elements of the project <LineBreak/> 
                    *An external vendor could be any firm delivering resource technology, data or any other service/product to the People Analytics function
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="OtherPanel2" Grid.Column="1" Grid.Row="8">
                <Label Name ="Sponsorship" Content="Sponsorship" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0"  Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val8" />
                <Label Name = "eight" Content="{Binding ElementName=val8, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="4" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                 Market-Facing Businesses and/or AOR buy into the project through at least one Officer sponsoring the project
            </TextBlock>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="OtherOtherPanel2" Grid.Column="1" Grid.Row="9">
                <Label Name ="Implementation" Content="Implementation" Foreground="Black" HorizontalAlignment="Center" FontFamily="Gotham Book"/>
                <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10,0,10,0" Maximum="4" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="val9" />
                <Label Name = "nine" Content="{Binding ElementName=val9, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontFamily="Gotham Book" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="9" FontFamily="Gotham Book" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black" TextWrapping="Wrap">
                 The project can be implemented across part of or all of Allstate
            </TextBlock>

            <Button Grid.Column="3" Grid.Row="10" HorizontalAlignment="right" VerticalAlignment="Bottom" Click="saveButtonClicked">Save</Button>
            <Button Grid.Column="1" Grid.Row="10" HorizontalAlignment="left" VerticalAlignment="Bottom" Click="deleteButtonClicked">Delete</Button>
        </Grid>
    </ScrollViewer>
</Window>
