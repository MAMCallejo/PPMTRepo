<UserControl x:Class="PPMT.UserControlMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPMT"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid>
        <ListBoxItem x:Name="ListViewItemMenu" Content="{Binding Path=Header}" Padding="37 14" FontSize="15" Foreground="#2c7b7f" HorizontalAlignment="Left"/>
        <Expander x:Name="ExpanderMenu" Header="{Binding Path=Header}" IsExpanded="False" HorizontalAlignment="Center" Background="{x:Null}" Foreground="#2c7b7f">
            <ListView x:Name="ListViewMenu" ItemsSource="{Binding Path=SubItems}" Foreground="#2c7b7f" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                   <DataTemplate>
                        <TextBlock Text="{Binding Path=pSponsor}" HorizontalAlignment="Center"/>
                    </DataTemplate> 
                </ListView.ItemTemplate>
            </ListView>
        </Expander>
    </Grid>
</UserControl>
