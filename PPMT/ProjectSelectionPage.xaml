<Page x:Class="PPMT.ProjectSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPMT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectSelectionPage">

    <Grid>

        <Border Grid.RowSpan="1" Grid.ColumnSpan="1">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#2c7b7f" Offset="0.0"/>
                    <GradientStop Color="#2b3559" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <UniformGrid x:Name="grid" Rows="10" Columns="1">

        </UniformGrid>
    </Grid>
</Page>
